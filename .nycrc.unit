{
  "extends": "@istanbuljs/nyc-config-typescript",
  "exclude": [
    "coverage*",
    "scripts/**/*",
    "src/**/*e2e*"
  ],
  "check-coverage": true,
  "per-file": false,
  "lines": 99,
  "statements": 99,
  "functions": 100,
  "branches": 100,
  "report-dir": "./coverage-unit",
  "reporter": [
    "html",
    "text-summary"
  ]
}
