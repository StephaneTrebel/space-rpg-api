{
  "name": "space-rpg-api",
  "version": "1.0.0",
  "description": "A Space RPG RESTful API",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean:dist && tsc",
    "clean:dist": "rm -rf dist",
    "lint": "tsc --pretty && tslint --project ./tsconfig.json",
    "nyc:e2e": "nyc --nycrc-path .nycrc.e2e npm run tape:e2e",
    "spec-editor": "docker run --rm -d -p 80:8080 swaggerapi/swagger-editor",
    "start": "npm run build && npm run start:dist",
    "start:dist": "NODE_ENV=production node dist/src/index.js",
    "start:watch": "chokidar e2e/**/*.ts src/**/*.ts openapi.yaml --initial -c 'npm run lint && npm run start'",
    "tape:e2e": "tape dist/**/*.e2e.js | tap-spec",
    "test": "npm run test:all",
    "test:all": "npm run lint && npm run test:unit && npm run test:e2e",
    "test:unit": "echo No unit tests yet",
    "test:e2e": "npm run build && npm run nyc:e2e",
    "test:e2e:watch": "chokidar e2e/**/*.ts src/**/*.ts openapi.yaml --initial -c 'npm run lint && npm run test:e2e'",
    "validate-spec": "node scripts/validate-spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StephaneTrebel/space-rpg-api.git"
  },
  "keywords": ["space", "rpg", "api", "openapi"],
  "author": "Stéphane TREBEL",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/StephaneTrebel/space-rpg-api/issues"
  },
  "homepage": "https://github.com/StephaneTrebel/space-rpg-api#readme",
  "devDependencies": {
    "@types/cors": "2.8.5",
    "@types/express": "4.16.1",
    "@types/js-yaml": "3.12.1",
    "@types/request": "2.48.1",
    "@types/tape": "4.2.33",
    "chokidar-cli-infanticide": "1.3.1",
    "js-yaml": "3.13.1",
    "lint-staged": "8.1.5",
    "nyc": "14.0.0",
    "openapi-enforcer": "1.2.3",
    "prettier": "1.16.4",
    "request": "2.88.0",
    "tap-spec": "5.0.0",
    "tape": "4.10.1",
    "tslint": "5.16.0",
    "typescript": "3.3.4000"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.16.4",
    "openapi-backend": "2.2.0"
  }
}
